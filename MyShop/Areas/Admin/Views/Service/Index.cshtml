@model IEnumerable<Service>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Services</h1>


<br />
<br />
<div class="border backgroundWhite ">
    <div class="row">
        <div class="col-6">
            <h2 class="text-info"> Menu Item List</h2>
        </div>
        <div class="col-6 text-right">
            <partial name="_CreateButtonPartial" />
        </div>
    </div>
    <br />
    <div class="table-responsive">
            @if (Model.Count() > 0)
            {
                <table id="tblData" class="table table-striped border">
                    <thead >
                        <tr class="table-secondary">
                            <th>
                                @Html.DisplayNameFor(m => m.Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(m => m.Price)
                            </th>
                            <th>
                                @Html.DisplayNameFor(m => m.CategoryId)
                            </th>
                            <th>
                                @Html.DisplayNameFor(m => m.SubCategoryId)
                            </th>
                            <th>@Html.DisplayNameFor(m => m.Description)</th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(m => item.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(m => item.Price)
                                </td>
                                <td>
                                    @Html.DisplayFor(m => item.Category.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(m => item.SubCategory.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(m => item.Description)
                                </td>
                                <td>
                                    <partial name="_TableButtonPartial" model="item.Id" />
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        else
        {
        <p>No menu item exists...</p>
        }
    </div>
</div>



@section Scripts{

    <script>

    </script>
}