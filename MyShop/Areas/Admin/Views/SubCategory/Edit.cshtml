@model MyShop.Models.ViewModels.SubCategoryVM
    



@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-primary pb-2 pt-2">Edit Subcategory</h2>

<form method="post" asp-action="Edit">

    <div class="row px-2 mx-2 backgroundWhite border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="SubCategory.Id" />


        <div class="form-group row col-8">
            <div class="col-4">
                <label asp-for="SubCategory.Name" class="border-0"></label>
            </div>
            <div class="col-8">
                <input asp-for="SubCategory.Name" class="form-control" />
                <span asp-validation-for="SubCategory.Name"></span>
            </div>
        </div>

        <div class="form-group row col-8">
            <div class="col-4">
                <label asp-for="SubCategory.CategoryId" class="form-control border-0"></label>
            </div>
            <div class="col-8">
                @Html.DropDownListFor(m => m.SubCategory.CategoryId, Model.CategoryList, " - Please Select a Category - ",
               new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group row border-0 col-sm-9">
            <div class="col-sm-10 offset-3">
                <partial name="_EditAndBackToListButton" model="@Model.SubCategory.Id" />
            </div>
        </div>

    </div>
    




</form>