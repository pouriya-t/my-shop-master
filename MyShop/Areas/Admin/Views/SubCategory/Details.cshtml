@model MyShop.Models.ViewModels.SubCategoryVM


@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>


<div class="row px-2 mx-2 backgroundWhite border">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="SubCategory.Id" />


    <div class="form-group row col-8">
        <div class="col-4">
            <label asp-for="SubCategory.Name" class="border-0"></label>
        </div>
        <div class="col-8">
            <label class="form-control border-0">@Model.SubCategory.Name</label>
        </div>
    </div>

    <div class="form-group row col-8">
        <div class="col-4">
            <label asp-for="Category.Name" class="border-0"></label>
        </div>
        <div class="col-8">
            <label class="form-control border-0">@Model.Category.Name</label>
        </div>
    </div>

 

    <div class="form-group row border-0 col-sm-9">
        <div class="col-sm-10 offset-3">
            <partial name="_DetailsAndBackToListButton" model="@Model.SubCategory.Id" />
        </div>
    </div>

</div>

