
@model IEnumerable<OrderHeader>


@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />
<div class="border backgroundWhite">
    <div class="row">
        <div class="col-6">
            <h2 class="text-info"> Order List</h2>
        </div>
        
    </div>
    <br />
    <div class="table-responsive">
        @if (Model.Count() > 0)
        {
            <table id="tblData" class="table table-striped border">
                <thead>
                    <tr class="table-secondary">
                        <th>
                            @Html.DisplayNameFor(m => m.OrderDate)
                        </th>
                        <th>
                            @Html.DisplayNameFor(m => m.Status)
                        </th>
                        <th>
                            @Html.DisplayNameFor(m => m.OrderTotalOriginal)
                        </th>
                        <th>
                            @Html.DisplayNameFor(m => m.OrderTotal)
                        </th>
                        <th>
                            @Html.DisplayNameFor(m => m.PhoneNumber)
                        </th>
                        <th>
                            @Html.DisplayNameFor(m => m.TransactionId)
                        </th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>
                            @item.OrderDate
                        </td>
                        <td>
                            @item.Status
                        </td>
                        <td>
                            @item.OrderTotalOriginal
                        </td>
                        <td>
                            @item.OrderTotal
                        </td>
                        <td>
                            @item.PhoneNumber
                        </td>
                        <td>
                            @item.TransactionId
                        </td>
                        <td>
                            <partial name="_TableButtonPartial" model="item.Id" />
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>No Order exists...</p>
        }
    </div>
</div>


@section Scripts{

    <script></script>

}





