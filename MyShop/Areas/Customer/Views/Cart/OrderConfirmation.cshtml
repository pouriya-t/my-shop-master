

@model long

@{
    ViewData["Title"] = "Order Confirmation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container row">
    <div class="col-12 text-center">
        <h1 class="text-primary text center">Order Request Submitted</h1><br />
        <div class="col-12 text-center" style="color:maroon">
            <br />
            Thank you for submitting a request online ! <br />
            We have received your request and our team will be call you shortly !
            <br />
            Your Request Number is : @Model
        </div>
        <a class="btn btn-success" asp-action="Payment" asp-route-id="@Model">Go To Pay</a>
    </div>

</div>

